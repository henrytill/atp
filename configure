#!/bin/sh

set -e

check_python_module() {
  printf "checking for Python module %s... " $1
  python3 -c "import $1" >/dev/null 2>&1
  if [ $? -eq 0 ]; then
    printf "yes\n"
    return 0
  else
    printf "no\n"
    return 1
  fi
}

rm -f config.mk

if check_python_module "cram"; then
  printf "HAS_CRAM = true\n" >>config.mk
fi

printf "OK\n"
